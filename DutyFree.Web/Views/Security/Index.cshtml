@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    section {
        display: flex;
        justify-content: center;
    }

    table {
      width: 1100px;
      margin-top: 10rem;
      border-collapse: collapse;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    .security-auth-btn {
        color: #3399ff;
    }
</style>

<section>
    <table>
        <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Image Url</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
        @foreach(var obj in Model) {
            <tr>
                <td>@obj.UserId</td>
                <td>@obj.Name</td>
                <td>@obj.Email</td>
                <td>@obj.ImageUrl</td>
                <td>@obj.Role</td>
                <td>
                    @if (User.Identity.IsAuthenticated) {
                        <a href="/Security/Logout" class="security-auth-btn">Odhlásit se</a>
                    }
                    else {
                        <a href="/Security/Login?userId=@obj.UserId" class="security-auth-btn">Přihlásit se</a>
                    }
                </td>
            </tr>
        }
    </table>
</section>